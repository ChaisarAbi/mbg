# Docker Environment Configuration for MBG Laravel Application
# Copy this file to .env before running docker-compose

APP_NAME="MBG Laravel"
APP_ENV=production
APP_KEY=base64:your_app_key_here
APP_DEBUG=false
APP_URL=https://mbg.aventra.my.id

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=mbg_production
DB_USERNAME=mbg_user
DB_PASSWORD=secure_password_123
DB_ROOT_PASSWORD=secure_root_password_123

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Cache Configuration
CACHE_DRIVER=redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=redis

# Mail Configuration (Update with your SMTP settings)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@mbg.aventra.my.id"
MAIL_FROM_NAME="${APP_NAME}"

# File System
FILESYSTEM_DISK=local

# Application Settings
APP_LOCALE=id
APP_FALLBACK_LOCALE=en

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Security
BROADCAST_DRIVER=log
LOG_CHANNEL=stack
LOG_LEVEL=error

# Additional Settings
BCRYPT_ROUNDS=12
